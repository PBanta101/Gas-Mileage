@model UserChangePasswordViewModel

<fieldset class="border d-inline-block p-3 shadow">
   <legend> Change Password </legend>

   <form method="post">
      <table>
         @if (ViewData.ModelState.ErrorCount > 0)
         {
            <thead>
               <tr>
                  <td colspan="2">
                     <div asp-validation-summary="All" class="text-danger"> </div>
                  </td>
               </tr>

               <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>
            </thead>
         }

         <tbody>
            <tr>
               <th class="pr-1 text-right"> Current Password: </th>
               <td class="pl-1"> <input asp-for="CurrentPassword" type="password" class="rounded" required /> </td>
            </tr>

            <tr>
               <th class="pr-1 text-right"> New Password: </th>
               <td class="pl-1"> <input asp-for="NewPassword" type="password" class="rounded" required /> </td>
            </tr>

            <tr>
               <th class="pr-1 text-right"> Verify New Password: </th>
               <td class="pl-1"> <input asp-for="VerifyNewPassword" type="password" class="rounded" required /> </td>
            </tr>
         </tbody>

         <tfoot>
            <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>

            <tr>
               <td class="text-center" colspan="2">
                  <input type="submit" class="btn btn-sm btn-outline-success mr-1" value="Change Password" />
                  <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary ml-1"> Cancel </a>
               </td>
            </tr>
         </tfoot>
      </table>

   </form>
</fieldset>
