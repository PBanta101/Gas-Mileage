@model Fillup

<fieldset class="border d-inline-block mb-3 mr-4 p-3 pt-0 shadow align-top">
   <legend> Delete Fillup </legend>

   <table>
      <tbody>
         <tr>
            <th class="pr-1 text-right"> Date: </th>
            <td class="pl-1"> @Model.Date.ToString("MM-dd-yyyy") </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Gallons: </th>
            <td class="pl-1"> @Model.Gallons.ToString("N3") </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Total Cost: </th>
            <td class="pl-1"> @Model.TotalCost.ToString("C") </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Odometer: </th>
            <td class="pl-1"> @Model.Odometer.ToString("N0") </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Trip Odometer: </th>
            <td class="pl-1"> @Model.TripOdometer.ToString("N1") </td>
         </tr>
      </tbody>

      <tfoot>
         <tr>
            <td colspan="2">
               <hr />
            </td>
         </tr>

         <tr>
            <td class="text-center" colspan="2">
               <span class="bg-warning text-center text-danger pl-2 pr-2"> Are You Sure? </span>
            </td>
         </tr>

         <tr>
            <td colspan="2">
               <hr />
            </td>
         </tr>

         <tr>
            <td class="text-center" colspan="2">
               <form method="post">
                  <input type="hidden" asp-for="Id" />
                  <input type="submit" value="Delete Fillup" class="btn btn-sm btn-outline-danger mr-1" />
                  <a asp-controller="Fillup" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary ml-1"> Cancel </a>
               </form>
            </td>
         </tr>
      </tfoot>
   </table>
</fieldset>
