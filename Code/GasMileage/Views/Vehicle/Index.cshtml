@model IQueryable<Vehicle>

<fieldset class="border d-inline-block p-3 shadow">
   <legend> Vehicles </legend>

   <table>
      <thead>
         <tr>
            <td class="text-center" colspan="2">
               <a asp-controller="Vehicle" asp-action="Add" class="btn btn-sm btn-outline-success"> Add A Vehicle </a>
            </td>
         </tr>

         <tr>
            <td colspan="2">
               <hr />
            </td>
         </tr>
      </thead>

      <tbody>
         @foreach (Vehicle v in Model)
         {
            <tr>
               <td class="pr-1">
                  @v.Year
                  @v.Make
                  @v.Model
               </td>

               <td class="pl-1">
                  <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-outline-primary">
                     Details
                  </a>
               </td>
            </tr>
         }
      </tbody>
   </table>
</fieldset>
