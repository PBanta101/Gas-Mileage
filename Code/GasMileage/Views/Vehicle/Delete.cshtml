@model Vehicle

<fieldset class="border d-inline-block p-3 shadow">
   <legend> dELETE Vehicle </legend>

   <table>
      <tbody>
         <tr>
            <th class="pr-1 text-right"> Year: </th>
            <td class="pl-1"> @Model.Year </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Make: </th>
            <td class="pl-1"> @Model.Make </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Model: </th>
            <td class="pl-1"> @Model.Model </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Vin: </th>
            <td class="pl-1"> @Model.Vin </td>
         </tr>

         <tr>
            <th class="pr-1 text-right"> Color: </th>
            <td class="pl-1"> @Model.Color </td>
         </tr>
      </tbody>

      <tfoot>
         <tr>
            <td colspan="2">
               <hr />
            </td>
         </tr>

         <tr>
            <td class="text-center" colspan="2">
               <span class="bg-warning text-center text-danger"> Are You Sure? </span>
            </td>
         </tr>

         <tr>
            <td class="text-center" colspan="2">
               <form method="post">
                  <input type="hidden" asp-for="Id" />
                  <input type="submit" value="Delete Vehicle" class="btn btn-sm btn-danger mr-1" />
                  <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-info ml-1"> Cancel </a>
               </form>
            </td>
         </tr>
      </tfoot>
   </table>
</fieldset>


